# Variáveis de Ambiente - Platform DevOps

# Configuração da Aplicação
APP_ENV=development
APP_NAME=platform-devops
APP_VERSION=1.0.0
NODE_ENV=development

# Configuração de Portas
API_PORT=3000
MONITORING_PORT=9090
WEBSOCKET_PORT=3001

# Configuração de Banco de Dados
DATABASE_URL=postgres://user:password@localhost:5432/platform_devops
REDIS_URL=redis://localhost:6379

# Configuração de Logs
LOG_LEVEL=info
LOG_FORMAT=json

# Configuração de Segurança
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Configuração de Monitoramento
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PROMETHEUS_PORT=9090

# Configuração de Deploy
DEPLOY_ENV=development
DEPLOY_BRANCH=main
AUTO_DEPLOY=false
ROLLBACK_ENABLED=true

# Configuração de Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=platform-devops-backups

# Configuração de Notificações
WEBHOOK_URL=
NOTIFICATION_EMAIL=admin@platform-devops.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Configuração de Features
FEATURE_WEBSSH=true
FEATURE_WEBFTP=true
FEATURE_API_DASHBOARD=true
FEATURE_AUTO_SCALING=false

# Configuração de CloudFlare (opcional)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_DOMAIN=

# Configuração Docker
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# Configuração Kubernetes (opcional)
KUBE_CONFIG_PATH=~/.kube/config
KUBE_NAMESPACE=default
