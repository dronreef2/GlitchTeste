{
  "name": "platform-devops",
  "version": "1.0.0",
  "description": "Plataforma DevOps completa com automação, backend e deploy",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:stress": "k6 run tests/performance/stress-test.js",
    "build": "npm run build:docker",
    "build:docker": "docker build -t platform-devops .",
    "lint": "eslint src/ tests/ scripts/",
    "lint:fix": "eslint src/ tests/ scripts/ --fix",
    "security:check": "npm audit --audit-level=high",
    "deploy:dev": "node scripts/deploy.js --env=development",
    "deploy:staging": "node scripts/deploy.js --env=staging",
    "deploy:prod": "node scripts/deploy.js --env=production",
    "monitor": "node scripts/monitor.js",
    "logs": "node scripts/logs.js",
    "health": "node scripts/health-check.js",
    "backup": "node scripts/backup.js",
    "rollback": "node scripts/rollback.js",
    "ci-cd": "./scripts/ci-cd.sh",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "devops",
    "automation",
    "backend",
    "deploy",
    "monitoring",
    "ci-cd"
  ],
  "author": "Platform DevOps Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "node-cron": "^3.0.3",
    "prometheus-client": "^15.0.0",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.6.0",
    "yaml": "^2.3.4",
    "tar": "^6.2.0",
    "archiver": "^6.0.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
